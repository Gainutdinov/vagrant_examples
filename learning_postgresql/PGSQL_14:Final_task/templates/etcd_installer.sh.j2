#!/bin/bash
ETCD_VER=v3.5.4

# choose either URL
GOOGLE_URL=https://storage.googleapis.com/etcd
GITHUB_URL=https://github.com/etcd-io/etcd/releases/download
DOWNLOAD_URL=${GOOGLE_URL}

rm -f /task14/etcd-${ETCD_VER}-linux-amd64.tar.gz
rm -rf /task14/etcd/ && mkdir -p /task14/etcd/

curl -L ${DOWNLOAD_URL}/${ETCD_VER}/etcd-${ETCD_VER}-linux-amd64.tar.gz -o /task14/etcd-${ETCD_VER}-linux-amd64.tar.gz
tar xzvf /task14/etcd-${ETCD_VER}-linux-amd64.tar.gz -C /task14/etcd --strip-components=1
rm -f /task14/etcd-${ETCD_VER}-linux-amd64.tar.gz

/task14/etcd/etcd --version
/task14/etcd/etcdctl
