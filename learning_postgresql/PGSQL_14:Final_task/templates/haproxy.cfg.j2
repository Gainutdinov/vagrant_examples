global 
    maxconn 100 
        defaults 
            log     global 
            mode    tcp 
            retries 2 
            timeout client 30m 
            timeout connect 4s 
            timeout server 30m 
            timeout check 5s 

        listen stats
            mode http
            bind *:32700
            stats enable
            stats uri /
 
        frontend ft_postgresql 
            bind *:5432 
            mode tcp
            default_backend bk_pgbouncers
 
        backend bk_pgbouncers
            option httpchk
            mode tcp
            server pgbouncer-1 {{ hostvars['pgbouncer-1'].ansible_host }}:5432 maxconn 100 check port 8008
            server pgbouncer-2 {{ hostvars['pgbouncer-2'].ansible_host }}:5432 maxconn 100 check port 8008
